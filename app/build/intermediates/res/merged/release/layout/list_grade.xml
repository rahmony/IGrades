<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/grade_type"
        android:id="@+id/list_grade_text_gradeType"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/earned_val"
        android:id="@+id/list_grade_text_earned_val"
        android:layout_marginRight="10dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:textColor="#0101ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/of"
        android:textSize="18sp"
        android:id="@+id/list_grade_text_of"
        android:layout_marginTop="10dp"
        android:textColor="#0101ff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/total_val"
        android:id="@+id/list_grade_text_total_val"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textColor="#0101ff" />
</LinearLayout>
